<% @page_title = "Customer" %>
<%- model_class = Customer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %><%= link_to("Add New Customer", new_customer_path, :class => 'btn btn-inverse pull-right') %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= link_to customer.id %></td>
        <td><%= customer.name %></td>
        <td><%= mail_to customer.email, nil,  cc:    " ", subject: "Case number # #{customer.id}", body: "Hello" if customer.email %></td>
        <td><%= customer.phone %></td>
        <td><%=l customer.created_at %></td>
        <td>
          <%= link_to("Show", customer_path(customer.id) , :class => 'btn btn-mini') %>
          <%= link_to("Edit", edit_customer_path(customer.id), :class => 'btn btn-mini') %>
          <%= link_to("Delete", delete_customer_path(customer.id), :class => 'btn btn-mini btn-danger') %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>