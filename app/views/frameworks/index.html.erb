<% @page_title = "Frameworks" %>
<%- model_class = Framework -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %><%= link_to("Add New Frameworks", new_framework_path, :class => 'btn btn-inverse pull-right') %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @frameworks.each do |framework| %>
      <tr>
        <td><%= link_to framework.id %></td>
        <td><%= framework.name %></td>
        <td><%=l framework.created_at %></td>
        <td>
          <%= link_to("Show", framework_path(framework.id) , :class => 'btn btn-mini') %>
          <%= link_to("Edit", edit_framework_path(framework.id) , :class => 'btn btn-mini') %>
          <%= link_to("Delete", delete_framework_path(framework.id) , :class => 'btn btn-mini btn-danger') %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>