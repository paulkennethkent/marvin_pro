<div class="subjects delete">
	<h2>Delete Products</h2>

	<%= form_for(:product, :url => {:action => 'destroy', :id => @product.id}) do |f| %>

	<p>Are you sure you want to permanently delete this subject?</p>
		<dl class="dl-horizontal">
			  <dt><p class="reference-name"><%= @product.name %></p></dt>
			  <dd><%= @product.tier %></dd>
		</dl>
		<div class="form-actions">
  		<%= submit_tag ("Delete Product"), :class => 'btn btn-danger' %>
  		<%= link_to("Cancel", {:action => 'index'}, :class => 'back-link')%>
    	</div>
	<% end %>
</div>
