<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<%= link_to("Add New Product", {:action => 'new'}, :class => 'btn btn-mini btn-success') %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:tier) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.id %></td>
        <td><%= product.name %></td>
        <td><%= product.tier %></td>
        <td><%=l product.created_at %></td>
        <td>
          <%= link_to("Show", {:action => 'show', :id => product.id}, :class => 'btn btn-mini') %>
          <%= link_to("Edit", {:action => 'edit', :id => product.id}, :class => 'btn btn-mini') %>
          <%= link_to("Delete", {:action => 'delete', :id => product.id}, :class => 'btn btn-mini btn-danger') %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>