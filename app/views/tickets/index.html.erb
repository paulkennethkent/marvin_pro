<% @page_title = "Tickets" %>
<%- model_class = Ticket -%>

<div class="page-header">  

  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %> <%= link_to("Add New Ticket", new_ticket_path, :class => 'btn btn-inverse pull-right') %></h1>

</div>
 
<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name('Ticket Number') %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:customer_id) %></th>
      <th><%= model_class.human_attribute_name('Customer Email') %></th>
      <th><%= model_class.human_attribute_name(:product_id) %></th>
      <th><%= model_class.human_attribute_name(:school_id) %></th>
      <th><%= model_class.human_attribute_name(:admin_users_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= model_class.human_attribute_name(:due) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tickets.each do |ticket| %>
      <tr data-link="https://www.google.co.uk">
        <%= status_tag3(ticket.due, ticket.status) %>
        <td>#<%=ticket.id %></td>
        <td><%= status_badge(ticket.status) %></td>
        <td><%= ticket.customer.name if ticket.customer %></td>
        <td><%= ticket.customer.email if ticket.customer %></td>
        <td><%= ticket.product.name if ticket.product  %></td>
        <td><%= ticket.school.name if ticket.school %></td>
        <td><%= ticket.admin_user.username if ticket.admin_user %></td>
        <td><%= ticket.created_at.to_formatted_s(:long_ordinal) %></td>
        <td><%= ticket.due.to_formatted_s(:long_ordinal) if ticket.status == 'Open' %></td>
        <td>
          <%= link_to("Show", ticket_path(ticket.id), :class => 'btn btn-mini') %>
          <%= link_to("Edit", edit_ticket_path(ticket.id) , :class => 'btn btn-mini') %>
          <%= link_to("Delete", delete_ticket_path(ticket.id) , :class => 'btn btn-mini btn-danger') %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>