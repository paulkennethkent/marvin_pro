<% @page_title = "Tickets - Delete" %>
<div class="subjects delete">
	<h2>Delete Ticket</h2>

	<%= form_for(:product, :url => {:action => 'destroy', :id => @ticket.id}) do |f| %>

	<p>Are you sure you want to permanently delete this subject?</p>
		<dl class="dl-horizontal">
  <dt><strong>ID:</strong></dt>
  <dd><%= @ticket.id %></dd>
  <dt><strong>Customer ID</dt>
  <dd><%= @ticket.customer_id %></dd>
  <dt><strong>Product ID:</strong></dt>
  <dd><%= @ticket.product_id %></dd>
   <dt><strong>Status</dt>
  <dd><%= status_tag(@ticket.status) %></dd>
  <dt><strong>Admin User:</strong></dt>
  <dd><%= @ticket.admin_users_id %></dd>
</dl>
		<div class="form-actions">
  		<%= submit_tag ("Delete Ticket"), :class => 'btn btn-danger' %>
  		<%= link_to("Cancel", {:action => 'index'}, :class => 'back-link')%>
    	</div>
	<% end %>
</div>
