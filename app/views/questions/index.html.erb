<% @page_title = "questions" %>
<%- model_class = Question -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %><%= link_to("Add New question", new_question_path, :class => 'btn btn-inverse pull-right') %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:body) %></th>
      <th><%= model_class.human_attribute_name(:product_id) %></th>
      <th><%= model_class.human_attribute_name(:framework_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= link_to question.id %></td>
        <td><%= question.body %></td>
        <td><%= question.product.try(:name) %></td>
        <td><%= question.framework.try(:name) %></td>
        <td><%=l question.created_at %></td>
        <td>
          <%= link_to("Show", question_path(question.id), :class => 'btn btn-mini') %>
          <%= link_to("Edit", edit_question_path(question.id) , :class => 'btn btn-mini') %>
          <%= link_to("Delete", delete_question_path(question.id) , :class => 'btn btn-mini btn-danger') %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>