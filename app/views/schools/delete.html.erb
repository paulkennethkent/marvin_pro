<% @page_title = "Schools - Delete" %>
<div class="school delete">
	<h2>Delete School</h2>

	<%= form_for(:school, :url => {:action => 'destroy', :id => @school.id}) do |f| %>

	<p>Are you sure you want to permanently delete this school?</p>
		<dl class="dl-horizontal">
			  <dt><p class="reference-name"><%= @school.name %></p></dt>
			  <dd><%= @school.postcode %></dd>
		</dl>
		<div class="form-actions">
  		<%= submit_tag ("Delete School"), :class => 'btn btn-danger' %>
  		<%= link_to("Cancel", {:action => 'index'}, :class => 'back-link')%>
    	</div>
	<% end %>
</div>
